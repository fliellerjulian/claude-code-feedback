{
    "name": "claude-code-feedback",
    "displayName": "Claude Code Diff Feedback",
    "description": "Send inline feedback on git diffs directly to Claude Code terminal",
    "version": "0.0.1",
    "publisher": "fliellerjulian",
    "author": {
      "name": "Julian Flieller"
    },
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/fliellerjulian/claude-code-feedback"
    },
    "bugs": {
      "url": "https://github.com/fliellerjulian/claude-code-feedback/issues"
    },
    "homepage": "https://github.com/fliellerjulian/claude-code-feedback#readme",
    "keywords": [
      "claude",
      "claude-code",
      "ai",
      "assistant",
      "diff",
      "git",
      "feedback",
      "comments",
      "code-review"
    ],
    "engines": {
      "vscode": "^1.85.0"
    },
    "categories": ["Other"],
    "activationEvents": ["onStartupFinished"],
    "extensionDependencies": ["vscode.git"],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "claude-code-feedback.send",
          "title": "Send Feedback to Claude Code"
        }
      ],
      "menus": {
        "comments/comment/title": [],
        "comments/commentThread/context": [
          {
            "command": "claude-code-feedback.send",
            "group": "inline",
            "when": "commentController == claude-code-feedback"
          }
        ]
      },
      "configuration": {
        "title": "Claude Code Feedback",
        "properties": {
          "claude-code-feedback.terminalNamePattern": {
            "type": "string",
            "default": "",
            "description": "Pattern to match the terminal name where Claude Code is running (e.g., 'node', 'claude'). Leave empty to be prompted each time."
          }
        }
      }
    },
    "scripts": {
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "package": "vsce package"
    },
    "devDependencies": {
      "@types/vscode": "^1.85.0",
      "@types/node": "^20.0.0",
      "typescript": "^5.3.0"
    }
  }